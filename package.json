{
  "version": "1.0.0",
  "license": "CC-BY-4.0",
  "homepage": "https://macaw-ui.vercel.app/",
  "repository": {
    "type": "git",
    "url": "git://github.com/saleor/macaw-ui.git"
  },
  "bugs": {
    "url": "https://github.com/saleor/macaw-ui/issues"
  },
  "type": "module",
  "files": [
    "dist",
    "legacy/dist"
  ],
  "main": "./dist/macaw-ui.cjs",
  "module": "./dist/macaw-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./next": {
      "import": "./dist/macaw-ui.js",
      "require": "./dist/macaw-ui.umd.cjs"
    },
    ".": {
      "import": "./legacy/dist/esm/index.js",
      "require": "./legacy/dist/cjs/index.js"
    }
  },
  "keywords": [
    "saleor",
    "macaw",
    "macaw-ui",
    "react",
    "ui components"
  ],
  "engines": {
    "node": ">=16 <19"
  },
  "scripts": {
    "prebuild": "cd legacy && npm run build",
    "build": "tsc && vite build",
    "release": "release-it"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "name": "@saleor/macaw-ui",
  "description": "Saleor's UI component library",
  "author": "Saleor Commerce",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "devDependencies": {
    "vite": "^4.0.4",
    "typescript": "^4.9.3",
    "vite-plugin-dts": "^1.7.1",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "release-it": "^15.6.0"
  },
  "release-it": {
    "github": {
      "release": true,
      "draft": true,
      "releaseName": "${version}"
    }
  }
}
