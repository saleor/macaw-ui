{
  "version": "1.0.0",
  "license": "CC-BY-4.0",
  "homepage": "https://macaw-ui.vercel.app/",
  "repository": {
    "type": "git",
    "url": "git://github.com/saleor/macaw-ui.git"
  },
  "bugs": {
    "url": "https://github.com/saleor/macaw-ui/issues"
  },
  "type": "module",
  "files": [
    "dist",
    "legacy/dist"
  ],
  "main": "./dist/macaw-ui.cjs",
  "module": "./dist/macaw-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./next": {
      "import": "./dist/macaw-ui.js",
      "require": "./dist/macaw-ui.umd.cjs"
    },
    ".": {
      "import": "./legacy/dist/esm/index.js",
      "require": "./legacy/dist/cjs/index.js"
    }
  },
  "keywords": [
    "saleor",
    "macaw",
    "macaw-ui",
    "react",
    "ui components"
  ],
  "engines": {
    "node": ">=16 <19"
  },
  "scripts": {
    "build:legacy": "cd legacy && npm run build",
    "build:next": "tsc && vite build",
    "build": "npm-run-all build:*",
    "release": "npm-run-all build release-it",
    "lint:legacy": "cd legacy && npm run lint",
    "lint:next": "eslint 'src/**/*.@(tsx|ts|jsx|js)' --fix --config .eslintrc.cjs",
    "test:legacy": "cd legacy && npm run test",
    "lint": "npm-run-all lint:*",
    "test": "npm-run-all test:*",
    "dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "name": "@saleor/macaw-ui",
  "description": "Saleor's UI component library",
  "author": "Saleor Commerce",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@vitejs/plugin-react": "^2.2.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.31.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.2",
    "release-it": "^15.6.0",
    "typescript": "^4.9.3",
    "vite": "^3.2.5",
    "vite-plugin-dts": "^1.7.1",
    "@babel/core": "^7.20.7",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/builder-vite": "^0.2.6",
    "@storybook/react": "^6.5.15",
    "@types/react": "^17.0.50",
    "@types/react-dom": "^17.0.17",
    "webpack": "^5.75.0",
    "require-from-string": "^2.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "cross-env": "^7.0.3",
    "@vanilla-extract/vite-plugin": "^3.7.0"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.9.2",
    "@vanilla-extract/recipes": "^0.3.0",
    "@vanilla-extract/sprinkles": "^1.5.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "release-it": {
    "github": {
      "release": true,
      "draft": true,
      "releaseName": "${version}"
    }
  }
}
